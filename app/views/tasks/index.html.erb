<h1>Task list</h1>


  <div class="form-check">
    <ul >
    <% @tasks.each do |task| %>
        <li>
        <% if task.completed == true %>
          <input class="form-check-input" type="radio" checked>
          <%= link_to task.title, task_path(task) %> <%= link_to "Edit", edit_task_path(task) %>
          <%= link_to "",
                    task_path(task),
                    :class =>"far fa-trash",
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete?" } %>
        <% else %>
          <input class="form-check-input" type="radio">
          <%= link_to task.title, task_path(task) %> <%= link_to "Edit", edit_task_path(task) %>
          <%= link_to "",
                    task_path(task),
                    :class =>"far fa-trash",
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete?" } %>
        <% end %>
        </li>

    <% end %>
    </ul>
  </div>

<h4><%= link_to "Add a new task", tasks_new_path %></h4>

